<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <!-- 主页Fragment -->

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.zs.my_zs_jetpack.ui.main.MainFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main">


        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_webFragment"
            app:destination="@id/webFragment" />
        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.zs.my_zs_jetpack.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.zs.my_zs_jetpack.ui.login.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.zs.my_zs_jetpack.ui.setting.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/webFragment"
        android:name="com.zs.my_zs_jetpack.ui.webDetails.WebFragment"
        android:label="WebFragment" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.zs.my_zs_jetpack.ui.category.CategoryFragment"
        android:label="CategoryFragment" />


</navigation>